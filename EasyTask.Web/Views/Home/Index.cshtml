<script>
    $(document).ready(function () {
        console.log("javascript");
        var zindex = 10;
        $("div.xcard").click(function (e) {
            console.log("pulsaron click en el card-valor zindex:" + zindex);
            e.preventDefault();
            var isShowing = false;
            if ($(this).hasClass("show")) {
                isShowing = true;
            }
            if ($("div.xcards").hasClass("showing")) {
                // a card is alredy in view
                $("div.xcard.show").removeClass("show");
                if (isShowing) {
                    // this card was showing - reset the grid
                    $("div.xcards").removeClass("showing");
                } else {
                    // this card isn't showing - get in with it
                    $(this)
                        .css({ zIndex: zindex })
                        .addClass("show");
                }
                zindex++;
            } else {
                // no cards in view.
                $("div.xcards").addClass("showing");
                $(this)
                    .css({ zIndex: zindex })
                    .addClass("show");
                zindex++;
            }
        });
    });
</script>
